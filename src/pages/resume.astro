---
import BaseLayout from "../layouts/BaseLayout.astro";
import resumeData from "../data/resume.json";
---

<BaseLayout
    title="Resume - Shanyu Thibaut"
    description="Professional experience and career timeline"
>
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold mb-8 text-gray-900">Resume</h1>

        <!-- Timeline Container -->
        <div class="relative">
            <!-- Vertical Line -->
            <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-300"></div>

            <!-- Timeline Items -->
            <div class="space-y-8">
                {resumeData.experience.map((item) => (
                    <div class="relative flex items-start">
                        <!-- Timeline Dot -->
                        <div
                            class={`absolute left-2 w-4 h-4 ${item.dotColor} rounded-full border-4 border-white shadow-lg z-10`}
                        >
                        </div>
                        
                        <!-- Content -->
                        <div class="ml-12">
                            <div
                                class="flex flex-col md:flex-row md:items-center md:gap-4 mb-2"
                            >
                                <h3 class="text-xl font-bold text-gray-900">
                                    {item.title}
                                </h3>
                                <span
                                    class="text-sm text-gray-500 font-medium bg-gray-100 px-3 py-1 rounded-full"
                                    >{item.period}</span
                                >
                            </div>
                            <div class="flex items-center gap-3 mb-3">
                                {item.logo && (
                                    <img 
                                        src={item.logo} 
                                        alt={`${item.company} logo`}
                                        class="w-8 h-8 rounded-full object-cover border border-gray-200"
                                    />
                                )}
                                <h4 class="text-lg text-blue-600 font-semibold">
                                    {item.company}
                                </h4>
                            </div>
                            <p class="text-gray-700 leading-relaxed">
                                {item.description}
                            </p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
        <!-- Education Section -->
        <div class="mt-16">
            <h2 class="text-2xl font-semibold mb-6 text-gray-900">Education</h2>
            <div class="space-y-6">
                {resumeData.education.map((item) => (
                    <div class="bg-white border border-gray-200 rounded-lg p-6">
                        <div
                            class="flex flex-col md:flex-row md:items-center md:justify-between mb-4"
                        >
                            <div class="flex items-center gap-3">
                                {item.logo && (
                                    <img 
                                        src={item.logo} 
                                        alt={`${item.school} logo`}
                                        class="w-10 h-10 rounded-full object-cover border border-gray-200"
                                    />
                                )}
                                <div>
                                    <h3 class="text-xl font-bold text-gray-900">
                                        {item.degree}
                                    </h3>
                                    <h4 class="text-lg text-blue-600 font-semibold">
                                        {item.school}
                                    </h4>
                                </div>
                            </div>
                            <span
                                class="text-sm text-gray-500 font-medium bg-gray-100 px-3 py-1 rounded-full mt-2 md:mt-0"
                                >{item.period}</span
                            >
                        </div>
                        <p class="text-gray-700 leading-relaxed">
                            {item.description}
                        </p>
                    </div>
                ))}
            </div>
        </div>
    </div>

        <!-- Skills Section -->
        <div class="mt-16">
            <h2 class="text-2xl font-semibold mb-6 text-gray-900">
                Technical Skills
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6">
                {Object.entries(resumeData.skills).map(([categoryName, skills]) => (
                    <div class="bg-white border border-gray-200 rounded-lg p-4">
                        <h3 class="text-lg font-semibold text-gray-900 mb-3">
                            {categoryName}
                        </h3>
                        <div class="flex flex-wrap gap-2">
                            {skills.map((skill) => (
                                <span
                                    class={`${skill.color} text-white px-3 py-1 rounded-full text-sm font-medium`}
                                    >{skill.name}</span
                                >
                            ))}
                        </div>
                    </div>
                ))}
            </div>
        </div>

        
</BaseLayout>
